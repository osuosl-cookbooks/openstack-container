<%= node["openstack"]["container"]["custom_template_banner"] %>

<VirtualHost <%= @server_host %>:<%= @server_port %>>
  WSGIDaemonProcess <%= @daemon_process %> processes=2 threads=10 user=<%= @user %> group=<%= @group %> display-name=%{GROUP} python-home=<%= @venv %>
  WSGIProcessGroup <%= @daemon_process %>
  WSGIScriptAlias / <%= @server_entry %>
  WSGIApplicationGroup %{GLOBAL}
  WSGIPassAuthorization On

  ErrorLogFormat "%{cu}t %M"
  ErrorLog <%= @log_dir %>/<%= @daemon_process %>_error.log
  CustomLog <%= @log_dir %>/<%= @daemon_process %>_access.log combined
  <% if [true, 'true', 'True'].include?(@log_debug) -%>
      LogLevel debug
  <% end -%>

  <Directory <%= File.dirname(@server_entry) %>>
    WSGIProcessGroup <%= @daemon_process %>
    WSGIApplicationGroup %{GLOBAL}
    AllowOverride All
    Require all granted
  </Directory>

  <% if @use_ssl -%>
      SSLEngine On
      SSLCertificateFile <%= @cert_file %>
      SSLCertificateKeyFile <%= @key_file %>
      SSLCACertificatePath <%= @ca_certs_path %>
      <% if @chain_file %>
          SSLCertificateChainFile <%= @chain_file %>
      <% end -%>
      SSLProtocol <%= @protocol %>
      <% if @ciphers -%>
          SSLCipherSuite <%= @ciphers %>
      <% end -%>
      <% if @cert_required -%>
          SSLVerifyClient require
      <% end -%>
  <% end -%>
</VirtualHost>

WSGISocketPrefix <%= @run_dir %>
